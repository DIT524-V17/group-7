<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/black"
    tools:context="t.s.o.r.f.frost.MainActivity">


    <!---Steer Right Button-->
    <Button
        android:text="Steer Right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button3"
        android:background="@android:color/holo_green_dark"
        android:textColor="@android:color/white"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="36dp"
        android:id="@+id/button4"/>

    <!---Forward Button-->
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button2"
        android:layout_marginBottom="22dp"
        android:background="@android:color/holo_green_dark"
        android:text="Forward"
        android:textColor="@android:color/white" />

    <!---Reverse Button-->
    <Button
        android:text="Reverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="23dp"
        android:id="@+id/button2"
        android:background="@android:color/holo_green_dark"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/button"/>

    <!---Steer left Button-->
    <Button
        android:text="Steer Left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:id="@+id/button3"
        android:background="@android:color/holo_green_dark"
        android:textColor="@android:color/white"
        android:layout_alignBaseline="@+id/button2"
        android:layout_alignBottom="@+id/button2"
        android:layout_toStartOf="@+id/button4" />

    <!---Image View to be Video View.
    <ImageView
        style= "@style/BackGroundImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        tools:ignore="ContentDescription"
        /> -->


    <!-- Collision Control GUI-->

    <View android:layout_width="70dp"
        android:layout_height="30dp"
        android:background="@drawable/square"
        android:id="@+id/text_background"
        android:layout_toEndOf="@+id/cc_view4"
        android:layout_alignTop="@+id/cc_view2"
        android:layout_alignBottom="@+id/cc_view4" />

    <View android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@drawable/circle2"
        android:id="@+id/cc_view2"
        android:layout_marginStart="85dp" />

    <View android:layout_width="5dp"
        android:layout_height="22dp"
        android:background="@drawable/borderedcircle"
        android:id="@+id/cc_view4"
        android:layout_alignTop="@+id/cc_view2"
        android:layout_alignStart="@+id/ccValue"
        android:layout_marginStart="11dp" />

    <TextView
        android:text="55"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ccValue"
        android:textSize="24sp"
        android:textColor="#ffff"
        android:layout_marginRight="7dp"
        android:layout_alignBaseline="@+id/buttonCC"
        android:layout_alignEnd="@+id/buttonCC" />

    <TextView
        android:text="Collision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/collision_text"
        android:textColor="#ffff"
        android:textSize="14sp"
        android:alpha="1"
        android:layout_alignTop="@+id/buttonCC"
        android:layout_alignEnd="@+id/text_background" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/buttonCC"
        android:color="#66FF0000"
        android:alpha="0"
        android:layout_marginStart="0dp"
        android:layout_alignBottom="@+id/cc_view2"
        android:layout_toEndOf="@+id/button5" />

    <!---Reconnection Button-->
    <Button
        android:text="Reconnect"
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_light"
        android:textColor="@android:color/holo_red_dark"
        android:layout_below="@+id/button6"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Degrees"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="56dp"
        android:layout_above="@+id/imgsw"
        android:layout_alignStart="@+id/imgsw" />

    <ImageSwitcher
        android:id="@+id/imgsw"
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_above="@+id/button"
        android:layout_alignEnd="@+id/button3"
        android:layout_marginEnd="55dp">

    </ImageSwitcher>

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/buttonCC"
        android:background="@android:color/holo_green_dark"
        android:text="Menu"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_dark"
        android:textColor="@android:color/white"
        android:layout_below="@+id/imgsw"
        android:layout_toEndOf="@+id/button3"
        android:text="Camera Right" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_dark"
        android:textColor="@android:color/white"
        android:layout_alignBottom="@+id/button7"
        android:layout_alignEnd="@+id/button3"
        android:text="Camera Left" />

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camera Up"
        android:background="@android:color/holo_green_dark"
        android:textColor="@android:color/white"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_alignStart="@+id/button10"
        android:layout_alignEnd="@+id/button10" />

    <Button
        android:id="@+id/button10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_dark"
        android:textColor="@android:color/white"
        android:layout_alignBottom="@+id/button2"
        android:layout_toEndOf="@+id/cc_view4"
        android:text="Camera Down" />

    <!---Custom Style
    <style android:name="BackGroundImageView">
        <item android:name = "android:alpha">0.5</item>
        <item android:name="android:scaleType">fitXY</item>
        <item android:name="android:src">@drawable/img_background</item>
    </style>-->

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/aa" />

</RelativeLayout>
